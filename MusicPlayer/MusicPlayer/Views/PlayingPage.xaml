<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:behaviors="clr-namespace:MusicPlayer.Behaviors"
             mc:Ignorable="d"
             x:Class="MusicPlayer.Views.PlayingPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="25"/>
            </Grid.ColumnDefinitions>
            <Image x:Name="Cover"
                   Grid.Column="1"
                   Grid.Row="1"
                   Source="{Binding Cover}"
                   Aspect="AspectFit"/>
            <StackLayout Grid.Row="3"
                         Grid.Column="1"
                         Spacing="0">
                <Label x:Name="SongTitle"
                       Text="{Binding SongTitle}"
                       FontSize="32"
                       FontAttributes="Bold"/>
                <Label x:Name="Artists"
                       Text="{Binding Artists}"
                       FontSize="18"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="15"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="PositionLabel"
                           Grid.Row="1"
                           Grid.Column="0"
                           Text="{Binding PositionText}"
                           FontSize="16"/>
                    <Slider x:Name="PositionSlider"
                            Grid.Row="1"
                            Grid.Column="1"
                            Minimum="0"
                            Maximum="{Binding DurationValue}"
                            Value="{Binding PositionValue}"
                            WidthRequest="{Binding Path=ActualWidth}"
                            MinimumTrackColor="LightBlue"
                            MaximumTrackColor="LightGray"
                            ThumbColor="Gray">
                        <Slider.Behaviors>
                            <behaviors:EventToCommandBehavior EventName="DragCompleted" Command="{Binding DragCompletedCommand}"/>
                        </Slider.Behaviors>
                    </Slider>
                    <Label x:Name="DurationLabel"
                           Grid.Row="1"
                           Grid.Column="2"
                           Text="{Binding DurationText}"
                           FontSize="16"/>
                </Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ImageButton x:Name="PreviousButton"
                                 Grid.Row="0"
                                 Grid.Column="1"
                                 Command="{Binding PreviousCommand}"
                                 Aspect="AspectFit"
                                 BackgroundColor="Transparent"/>
                    <ImageButton x:Name="PlayButton"
                                 Grid.Row="0"
                                 Grid.Column="3"
                                 Source="{Binding ButtonImage}"
                                 Command="{Binding PlayCommand}"
                                 Aspect="AspectFit"
                                 BackgroundColor="Transparent"/>
                    <ImageButton x:Name="NextButton"
                                 Grid.Row="0"
                                 Grid.Column="5"
                                 Command="{Binding NextCommand}"
                                 Aspect="AspectFit"
                                 BackgroundColor="Transparent"/>
                </Grid>
            </StackLayout>
        </Grid>
        <!--<StackLayout>
            <Label Text="Postion:" />
            <Slider x:Name="Position" />
            <Label x:Name="PositionLabel" />

            <Button x:Name="Play" 
                    Text="Play" 
                    Command="{Binding PlayCommand}"
                    BorderColor="Green" />
            <Button x:Name="Pause" 
                    Text="Pause" 
                    Command="{Binding PauseCommand}"
                    BorderColor="Blue" />
            <Button x:Name="Stop" 
                    Text="Stop" 
                    Command="{Binding StopCommand}"
                    BorderColor="Red" />

            <Label Text="Volume:" />
            <Slider x:Name="Volume" 
                    Minimum="0" 
                    Maximum="1"/>
        </StackLayout>-->
    </ContentPage.Content>
</ContentPage>